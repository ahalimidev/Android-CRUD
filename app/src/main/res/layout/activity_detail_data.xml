<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6750A3"
    android:orientation="vertical"
    tools:context=".AddData">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:text="Android CRUD"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_white_top"
        android:orientation="vertical"
        android:padding="28dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:text="Nama Lengkap"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nama_lengkap"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000F15"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:text="Nomor HP"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nomor_hp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000F15"
            android:textSize="14sp"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginBottom="3dp"
            android:text="Jenis Kelamin"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_jenis_kelamin"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="#000F15"
            android:textSize="14sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_keluar"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:id="@+id/bt_keluar"
            android:text="Kembali"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>